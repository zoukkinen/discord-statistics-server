{
  "name": "assembly-discord-tracker",
  "version": "1.0.0",
  "description": "Discord activity tracker for Assembly Summer 2025 - monitors Discord server member count and game activity",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc && npm run copy:sql",
    "copy:sql": "mkdir -p dist/database/migrations && cp src/database/migrations/*.sql dist/database/migrations/",
    "build:client": "npx vite build",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/index.ts",
    "dev:client": "npx vite --host 0.0.0.0",
    "dev:build": "tsc --watch",
    "clean": "rm -rf dist && rm -rf public/dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "vitest",
    "test:frontend:ui": "vitest --ui",
    "test:e2e": "npm run test:migration && npm run test:integration",
    "test:migration": "ts-node test/migration.test.ts",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:frontend && npm run test:migration",
    "heroku-prebuild": "echo 'ðŸ”§ Heroku prebuild for Assembly Discord Tracker'",
    "heroku-postbuild": "npm run build",
    "deploy:heroku": "git push heroku main",
    "logs:heroku": "heroku logs --tail --app",
    "health:heroku": "curl -f"
  },
  "keywords": [
    "discord",
    "bot",
    "activity",
    "tracker",
    "assembly",
    "gaming",
    "statistics"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "dependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@types/pg": "^8.15.5",
    "babel-preset-solid": "^1.8.22",
    "chartjs-plugin-zoom": "^2.2.0",
    "cors": "^2.8.5",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "solid-chartjs": "^1.3.11",
    "solid-js": "^1.8.22",
    "typescript": "^5.8.3",
    "vite": "^7.1.0",
    "vite-plugin-solid": "^2.10.2"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^2.1.9",
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "jsdom": "^25.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "vitest": "^2.1.9"
  }
}
